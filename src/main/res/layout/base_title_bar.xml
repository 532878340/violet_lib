<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/title_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_height"
        android:paddingLeft="@dimen/title_padding">

        <TextView
            android:id="@+id/top_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/top_left_arrow"
            android:gravity="center"
            android:minWidth="@dimen/titlebar_height"
            android:textColor="@color/txt_minor"
            android:textSize="@dimen/txt_size_16"
            android:visibility="gone" />

        <TextView
            android:id="@+id/top_left_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/top_left_close"
            android:gravity="center"
            android:minWidth="@dimen/titlebar_height"
            android:textColor="@color/txt_minor"
            android:textSize="@dimen/txt_size_16"
            android:visibility="gone" />
    </LinearLayout>


    <TextView
        android:id="@+id/top_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="middle"
        android:gravity="center"
        android:maxWidth="@dimen/title_width"
        android:singleLine="true"
        android:textColor="@color/txt_main"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/normal_padding"
        android:paddingRight="@dimen/title_padding">

        <TextView
            android:id="@+id/top_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/txt_main"
            android:textSize="@dimen/txt_size_15"
            android:visibility="gone" />
    </FrameLayout>

    <View
        style="@style/horizontal_line"
        android:layout_alignParentBottom="true" />
</RelativeLayout>